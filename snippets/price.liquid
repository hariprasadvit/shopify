{% liquid
  assign first_available = product.variants | where: 'available', true | first
%}
<p style="font-weight:700;margin:.5em 0">
  {% if product.price_varies %}
    From {{ first_available.price | money }}
  {% else %}
    {{ product.price | money }}
  {% endif %}
  <span style="color:var(--muted);font-weight:400">/ month</span>
</p>